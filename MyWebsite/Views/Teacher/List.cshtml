@model List<MyWebsite.Models.Teacher>

<h1>All Teachers List</h1>
<div class="bg-transparent">
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Course Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var teacher in Model)
            {
                <tr>
                    <td>@teacher.FirstName</td>
                    <td>@teacher.LastName</td>
                    <td>@teacher.Email</td>
                    <td>@teacher.CourseName</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Teacher" asp-action="Edit" asp-route-id="@teacher.Id">Edit</a>
                        <form asp-action="Delete" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@teacher.Id" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>